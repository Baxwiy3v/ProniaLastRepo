@model List<Color>
@{
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Colors</h4>
                    <a class="btn btn-inverse-success btn-fw" asp-controller="Color" asp-action="Create">Create Color</a>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        No
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Products Count
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Color color in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>
                                            @count
                                        </td>
                                        <td>
                                            @color.Name
                                        </td>
                                        <td>
                                            @color.ProductColors.Count
                                        </td>
                                        <td>
                                            <a asp-action="Update" asp-route-id="@color.Id" class="btn btn-inverse-warning btn-fw"> <i class="mdi mdi-pencil"></i> Update</a>
                                            <a asp-action="Delete" asp-route-id="@color.Id" class="btn btn-inverse-danger btn-fw"> <i class="mdi mdi-delete"></i> Delete</a>
                                            <a asp-action="Details" asp-route-id="@color.Id" class="btn btn-inverse-primary btn-fw"> <i class="mdi mdi-open-in-new"></i> Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
