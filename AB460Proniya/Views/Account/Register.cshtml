@model RegisterVM


@{
    var genders = new List<string> {"Kisi","Qadin","Diger " };
}

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Register </h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li> Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                
                <div class="col-lg-12 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Name"> Name</label>
                                    <input asp-for="Name" placeholder="Name" />
                                    <span class="text-danger" asp-validation-for="Name"> </span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Surname"> Surname</label>
                                    <input asp-for="Surname" placeholder="Surname" />
                                    <span class="text-danger" asp-validation-for="Surname"> </span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="UserName"> UserName</label>
                                    <input asp-for="UserName" placeholder="UserName" />
                                    <span class="text-danger" asp-validation-for="UserName"> </span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Email"> Email</label>
                                    <input asp-for="Email" placeholder="Email" />
                                    <span class="text-danger" asp-validation-for="Email"> </span>
                                </div>

                                <div class="col-md-12">
                                    <label asp-for="Gender">Gender</label>
                                    @foreach (var g in genders)
                                    {
                                        <div class="form-check">
                                            <div class="d-flex">
                                                <label asp-for="Gender" class="form-check-label"> @g </label>
                                                <input asp-for="Gender" value="@g" type="radio">
                                            </div>
                                            <span class="text-danger" asp-validation-for="Gender"></span>
                                        </div>
                                    }

                                </div>


                                <div class="col-md-6">
                                    <label asp-for="Password"> Password</label>
                                    <input asp-for="Password" placeholder="Password" />
                                    <span class ="text-danger" asp-validation-for="Password"> </span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword"> ConfirmPassword</label>
                                    <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" />
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"> </span>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->